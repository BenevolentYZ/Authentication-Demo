@page
@model Security.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="container border" style="padding: 20px;">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Credential.Username"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="Credential.Username" />
            </div>
            <span class="text-danger" asp-validation-for="Credential.Username"></span>
        </div>
        <div class="form-group row mt-2">
            <div class="col-2">
                <label asp-for="Credential.Password"></label>
            </div>
            <div class="col-5">
                <input type="password" asp-for="Credential.Password" />
            </div>
            <span class="text-danger" asp-validation-for="Credential.Password"></span>

        </div>
        <div class="form-group row mt-2">
            <div class="col-2">
                <input type="submit" class="btn btn-primary"/>
            </div>
            <div class="col-5">

            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
